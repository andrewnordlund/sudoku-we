<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://sudoku/locale/sudoku.dtd">
<prefwindow	id="sudokuPreferences"
		xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
		title="&options;">
<prefpane id="pane1" label="&options.main;">
  <preferences>
    <preference id="hinttips" name="extensions.sudoku.hinttips" type="bool"/>
    <preference id="hlcross" name="extensions.sudoku.hlcross" type="bool"/>
    <preference id="hlerrors" name="extensions.sudoku.hlerrors" type="bool"/>
    <preference id="allowhard" name="extensions.sudoku.allowhard" type="bool"/>
  </preferences>

  <groupbox>
    <caption id="engine" label="&options.engine;"/>
    <checkbox id="allowhard" preftype="bool" preference="allowhard" label="&options.allowhard;"/>
  </groupbox>
  <groupbox>
    <caption id="display" label="&options.display;"/>
    <checkbox id="hinttips" preftype="bool" preference="hinttips" label="&options.hinttips;"/>
    <checkbox id="hlcross" preftype="bool" preference="hlcross" label="&options.hlcross;"/>
    <checkbox id="hlerrors" preftype="bool" preference="hlerrors" label="&options.hlerrors;"/>
  </groupbox>
  <!--groupbox>
    <caption id="input" label="&options.input;"/>
  </groupbox-->
</prefpane>
</prefwindow>

