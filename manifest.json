{
	"manifest_version": 2,
	"name": "Sudoku",
	"description": "An in-browser sudoku game.",
	"version": "0.0.1-a1",
	
	"icons": {
		"48": "skins/main-mid.png",
		"96": "skins/main-big.png"
	},
	
	"applications": {
		"gecko": {
			"id": "nordEHHelper@nordburg.ca",
			"strict_min_version": "45.0"
		}
	},
	
	"permissions": [
		"tabs",
		"<all_urls>",
		"storage"
	],
	"browser_action": {
		"default_icon": {
			"19": "skins/main-small.png",
			"38": "skins/main-mid.png"
		},
		"default_title": "Sudoku"
	},
	"background": {
		"scripts": []
	},
	"web_accessible_resources" : ["libs/*","libs/styles/*"]
}
